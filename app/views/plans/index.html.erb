<div class="index-container">
    <div class="page-title">
        <h2>予定一覧</h2>
        <p><%= link_to "新規追加", :new_plan, class: "button-blue" %></p>
    </div>

    <% if flash[:notice] %>
        <p class="notice"><%= flash[:notice] %></p>
    <% end %>


    <table>
        <thead>
            <tr>
                <th>id</th>
                <th>タイトル</th>
                <th>開始日</th>
                <th>終了日</th>
                <th>終日</th>
                <th>更新日時</th>
                <th></th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            <% @plans.each do |plan| %>
                <tr>
                    <td><%= plan.id %></td>
                    <td><%= plan.title %></td>
                    <td><%= plan.start.strftime('%Y/%m/%d') %></td>
                    <td><%= plan.end.strftime('%Y/%m/%d') %></td>
                    <td>
                        <% if plan.all_day   %>
                            <span>◯</span>
                        <% else %>
                            <span></span>
                        <% end %>
                    </td>
                    <td><%= plan.updated_at.to_s(:datetime_jp) %></td>
                    <td><%= link_to "詳細", plan %></td>
                    <td><%= link_to "編集", [:edit, plan] %></td>
                    <td><%= link_to "削除", plan, method: :delete, data: { confirm: "本当に削除しますか？" } %></td>
                </tr>
            <% end %>
        </tbody>
    </table>

    <div class="footer">
        <p class="footer-count">予定合計 <%= Plan.count %>件 </p>
        <p class="footer-date">本日の日付 <%= l Date.today %> </p>  <!--#i18nを使って日付フォーマットを指定もできる-->
    </div>
</div>